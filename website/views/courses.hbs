<br><br>
<div class="container">
    <form class="form-inline my-2 my-lg-0" action="/search/course" method="POST">
        <input class="form-control mr-sm-2" type="search" placeholder="Search here" aria-label="Search" name="query">
        <button class="btn btn-outline-dark" type="submit">Search</button>
    </form>

    {{msg}}
    
    {{#if noData}}
    No courses available.

    {{else}}

    {{#each courses}}
    <div class="row">

        {{#each this}}
        <div class="col-3">
            <a href="/courses/{{this.id}}">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{this.coursename}}</h5>
                        <p class="card-text">{{this.description}}</p>

                    </div>
                    <div class="card-footer text-muted text-center">
                        {{this.uploader}}
                    </div>
                </div>
            </a>
        </div>
        {{/each}}
    </div>
    {{/each}}

    {{/if}}

</div>