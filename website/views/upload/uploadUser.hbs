<br><br><br><br>
<div class="messages">
    <div class="error">
        {{errorMsg}}
    </div>
    <div class="success">
        {{successMsg}}
    </div>
</div>
<div class="row">

    <div class="col-3">
        <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
            <a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab"
                aria-controls="v-pills-home" aria-selected="true">Upload Link</a>
            <a class="nav-link" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" role="tab"
                aria-controls="v-pills-profile" aria-selected="false">Upload File</a>
        </div>
    </div>
    <div class="col-9">
        <div class="tab-content" id="v-pills-tabContent">
            <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
                <form action="/users/upload/share" method="POST">
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Title</label>
                        <div class="col-sm-10">
                            <input required="true" type="text" class="form-control" id="title" name="title"
                                placeholder="Enter Title">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Description</label>
                        <div class="col-sm-10">
                            <input required="true" class="form-control" id="description" name="description"
                                placeholder="Describe your post">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Tags</label>
                        <div class="col-sm-10">
                            <input required="true" class="tags" id="tags" name="tags"
                                placeholder="Enter tags(for ex: tag1,tag2,...)">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Give link</label>
                        <div class="col-sm-10">
                            <input required="true" class="form-control" id="link" name="link" placeholder="Enter link">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </form>
            </div>


            <div class="tab-pane fade" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">
                <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel"
                    aria-labelledby="v-pills-home-tab">
                    <form ref='uploadForm' id='uploadForm' encType="multipart/form-data" action="/users/upload/data"
                        method="POST">
                        <div class="form-group row">
                            <label for="inputEmail3" class="col-sm-2 col-form-label">Title</label>
                            <div class="col-sm-10">
                                <input required="true" class="form-control" id="title" name="title"
                                    placeholder="Enter Title">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputEmail3" class="col-sm-2 col-form-label">Description</label>
                            <div class="col-sm-10">
                                <input required="true" class="form-control" id="description" name="description"
                                    placeholder="Describe your post">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputEmail3" class="col-sm-2 col-form-label">Tags</label>
                            <div class="col-sm-10">
                                <input required="true" class="form-control" id="tags" name="tags"
                                    placeholder="Enter tags(for ex: tag1,tag2,...)">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlFile1">Upload file</label>
                            <input required="true" type="file" class="form-control-file" id="sampleFile"
                                name="sampleFile">
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>


        </div>
    </div>

</div>